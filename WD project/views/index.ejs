<div class="hero-section" dir="rtl">
  <div class="hero-content">
    <h1 class="hero-title">وجهتك الأولى لوصفات رائعة ولذيذة</h1>
    <p class="hero-subtitle">نجمع لك وصفات امهر الطباخين في العالم</p>
    <!-- <div class="hero-search">
      <input type="text" placeholder="ابحث عن وصفة..." class="search-input">
      <button class="search-btn">بحث</button>
    </div> -->
  </div>
  <div class="hero-image-container">
    <img src="/img/steak.png" alt="image of steak" class="hero-image" width="981" height="528">
  </div>
</div>

<section class="articles" dir="rtl">
  <h2 class="articles__heading">الوصفات</h2>

  <ul class="article-ul">
    <% data.forEach(post => { %>
      <li>
        <a href="/post/<%= post._id %>">
          <span><%= post.title %></span>
          <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
        </a>
      </li>
      <hr style="background-color: aliceblue;">
    <% }) %>
  </ul>


  <% if (nextPage !== null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
  <% } %>
 

  



</section>
