<div class="admin-title">
  <h2>مرحباً، <%= user.name %></h2>
  <!-- <h3>إدارة المنشورات</h3> -->
  <a href="/add-post" class="button">+ إضافة وصفة جديدة</a>
</div>

<ul class="admin-posts">
  <% data.forEach(post => { %>
    <li>
      <a href="/post/<%= post._id %>">
        <%= post.title %> &nearr;
      </a>
      <div class="admin-post-controls">
        <a href="/edit-post/<%= post._id %>" class="btn">تعديل</a>

        <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
          <input type="submit" value="حذف" class="btn-delete btn">
        </form>
      </div>
    </li>
  <% }) %>
</ul>

